	name = Josh Klodnicki
	email = joshklod@gmail.com
[core]
	editor = vim
	pager = autopage -RS
	whitespace = cr-at-eol,tabwidth=4
[pull]
	ff = only
[push]
	default = simple
	followTags = true
	recurseSubmodules = check
[pager]
	diff   = autopage -RS -x 1,5
	show   = autopage -RS -x 1,5
[log]
	date = iso
	graphColors = 160,40,184,63,165,45,172,43,112,99,163,33
	abbrevCommit = true
	decorate = auto # When output is a terminal
[diff "word"]
	textconv = ~/.config/git/scripts/word-textconv.sh
[diff]
	algorithm = histogram
	indentHeuristic = true
	submodule = log
	colorMoved = zebra
	colorMovedWS = allow-indentation-change
[stash]
	showPatch = true
	showStat = false
[init]
	templateDir = ~/.config/git/template
[submodule]
	fetchJobs = 0 # Detect reasonable default
[rerere]
	enabled = true
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[status]
	showStash = true
[advice]
	detachedHead = false
