" Source default vimrc
if has("patch-7.4.2111")
	unlet! skip_defaults_vim
	source $VIMRUNTIME/defaults.vim
endif

" Start plugin manager
execute  pathogen#infect()
filetype plugin indent on

" UI Preferences
set laststatus =2 " Always show status line

" Syntax highlighting
let         g:solarized_contrast   ="high"
let         g:solarized_termcolors =256
let         g:solarized_menu       =0
syntax      enable
set         background             =dark
colorscheme solarized

" Movement
set scrolloff     =8
set nostartofline

" Visual indicators
set cursorline
set colorcolumn =100
set list
set listchars   =tab:›\ ,trail:·,extends:»,precedes:«,nbsp:· " Use simple characters
set showbreak   =»\                                          " for terminal mode

" Tab behavior
set tabstop        =4
set shiftwidth     =0  " Use value of tabstop
set softtabstop    =-1 " Use value of shiftwidth
set noexpandtab
set autoindent
set linebreak
set breakindent
set breakindentopt =min:20,shift:8

" Window behavior
set winwidth    =80
set winminwidth =20
set splitbelow
set splitright
set nowrap

" Editing behavior
set virtualedit   =block
set formatoptions =croqlj " Specify default line-wrapping behavior
set textwidth     =78
set mouse         =a      " Enable mouse
set ttymouse      =sgr    " Enable advanced mouse behavior

" Tags
set tags +=./.tags,.tags,/usr/local/lib/**/tags,/usr/local/lib/**/.tags

" Navigation
map <X1Mouse> <C-O>
map <X2Mouse> <C-I>

" Searching
set ignorecase
set smartcase  " Ignore case only when all lowercase

" Macros
" Delete trailing whitespace
nmap <silent> ,d :s/\s\+$//<CR>
" Change word
nmap <silent> cc lbce
