### Remotes ###

Host local.lenovo
	HostName      10.0.2.1
Host *lenovo
	HostName      private.klodnicki.com
	User          josh

Host local.desktop proxy.desktop
	HostName      10.0.2.2
	Port          22
Host *desktop
	HostName      private.klodnicki.com
	User          josh
	Port          2222

Host local.gbeast proxy.gbeast
	HostName      10.0.2.2
	Port          22
Host *gbeast
	HostName      private.klodnicki.com
	User          Josh
	Port          2222

Host *bootcamp
	HostName      10.0.2.4
	User          Josh

Host reverse
	HostName              localhost
	Port                  2222
	StrictHostKeyChecking no

### Defaults ###

# Connections forwarded through Lenovo
Host proxy.*
	ProxyJump     josh@private.klodnicki.com:22
	ForwardAgent  yes

# Any familiar host
Host *lenovo *desktop *gbeast *bootcamp
	# Allows reverse ssh connections
	RemoteForward 2222 localhost:22

Host *
