### Remotes ###

Host local.kserv
	HostName      10.0.2.5
	Port          22
Host *kserv
	HostName      private.klodnicki.com
	User          josh
	Port          2222

Host local.desktop proxy.desktop
	HostName      10.0.2.2
	Port          22
Host *desktop
	HostName      private.klodnicki.com
	User          josh
	Port          2244

Host *bootcamp
	HostName      10.0.2.4
	User          Josh

Host reverse
	HostName              localhost
	Port                  2222
	StrictHostKeyChecking no

### Defaults ###

# Connections forwarded through kserv
Host proxy.*
	ProxyJump     josh@private.klodnicki.com:2222
	ForwardAgent  yes

# Any familiar host
Host *kserv *desktop *bootcamp
	# Allows reverse ssh connections
	RemoteForward 2222 localhost:22
